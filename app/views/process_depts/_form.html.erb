<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>Início<% end %>
      </li>
      <li class="active">
        <%= link_to process_depts_path do %>Processos<% end %>
      </li>
      <li class="active">
        Novo
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="card-box">
      <div class="row">
        <%= form_with(model: process_dept, local: true, :id => "form") do |form| %>
          <% if process_dept.errors.any? %>
            <div class="alert alert-danger" id="danger-alert">
              <button type="button" class="close" data-dismiss="alert">x</button>
              <strong>Erro! </strong>
              Por favor, preencha todos os campos obrigatórios
            </div>
          <% end %>
          
          <div class="p-20"> 
            <h4 class="m-t-0 header-title" style="text-align:center;"><b>INFORMAÇÕES DO PROCESSO</b></h4>
            <br> 
            <div class="form-group">
              <span>DEPARTAMENTO</span>
              <%= form.select(:area_id, Area.all.collect {|u| [u.name, u.id]}, {}, {class: "form-control select2"}) %>
            </div>
            <div class="form-group">
              <span>NOME</span>
              <%= form.text_field :name, id: :process_dept_name, class: "form-control", required:true, placeholder: "Nome" %> 
            </div>

            <div class="form-group" style="text-align:left;">
              <%= link_to process_depts_path do %>
                <button class="btn btn-white waves-effect waves-light">Voltar</button>
              <% end %>
              <button type="submit" class="btn btn-default waves-effect waves-light">Salvar</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>