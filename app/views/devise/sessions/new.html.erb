<div class="account-pages"></div>
<div class="clearfix"></div>

<div class="wrapper-page">
  <div class="card-box">
    <div class="panel-heading">
      <h3 class="text-center"> Effec<strong class="text-custom">time</strong></h3>
    </div>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name,:html => {:class => 'form-horizontal m-t-20'}, url: session_path(resource_name)) do |f| %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <div class="form-group ">
          <div class="col-xs-12">
            <%= f.email_field :email, :class => "form-control", required:true, placeholder: "Email", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <%= f.password_field :password, :class => "form-control", required:true, placeholder: "Senha" %>
          </div>
        </div>
        <div class="form-group ">
          <div class="col-xs-12">
            <div class="checkbox checkbox-primary">
              <input id="checkbox-signup" type="checkbox" id="remember_me">
              <label for="checkbox-signup"> Lembrar </label>
            </div>
          </div>
        </div>
        <div class="form-group text-center m-t-40">
          <div class="col-xs-12">
            <button class="btn btn-pink btn-block text-uppercase waves-effect waves-light" type="submit">
              Log In
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 text-center">
      <p>
        <a class="text-primary m-l-5"><b><%= link_to "Esqueci minha senha", new_password_path(resource_name) %></b></a>
      </p>
      <p>
        Ainda n√£o possui uma conta? <a class="text-primary m-l-5"><b><%= link_to "Cadastre-se", new_registration_path(resource_name) %></b></a>
      </p>
    </div> 
  </div>
</div>
